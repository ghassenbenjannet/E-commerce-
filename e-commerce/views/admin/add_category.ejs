<form method="post" action="/admin/categories/add-category" enctype="multipart/form-data">
    
    <div class="form-group">
        <label for="">Nom</label>
        <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Taper le nom">
    </div>
    
     
    <button class="btn btn-default">Enregistrer</button>
    <a href="/admin/categories" class="btn btn-primary"> Retour</a>

</form>
<script>
 function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            
            reader.onload = function(e) {
                $("#imgPreview").attr('src', e.target.result).width(100).height(100);
            },
            
            reader.readAsDataURL(input.files[0]);
        }
    }
    
    $("#img").change(function() {
        readURL(this);
    });
    
</script>
