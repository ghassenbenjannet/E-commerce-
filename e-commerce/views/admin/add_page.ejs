<%- include ('../_layouts/headeradmin');-%>
<br><br>

<h2 class="page-title">Ajouter une page</h2>
<br><br>

<form method="post" action="/admin/pages/add-page">
    <div class="form-group">
        <label for="">Nom</label>
        <input class="form-control" type="text"  name="title" value="<%=title%>" placeholder="Nom de la page">
    </div>
    
    <div class="form-group">
        <label for="">Slug</label>
        <input class="form-control" type="text"  name="slug" value="<%=slug%>" placeholder="Slug">
        </div>
        
       <div class="form-group">
        <label for="">Contenu de la page</label>
        <textarea  class="form-control" id="ta" name="content" cols="30" rows="10" placeholder="Ecrire ..."><%=content%></textarea>
    </div>
    <button class="btn btn-default">Enregistrer</button>
    <a href="/admin/pages" class="btn btn-primary"> Retour</a>

</form>
<%-include ('../_layouts/footeradmin');-%>