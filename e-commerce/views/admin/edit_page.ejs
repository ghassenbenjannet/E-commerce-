<%- include ('../_layouts/headeradmin');-%>
<br><br>

<h2 class="page-title">Editer la page</h2>
<br><br>

<form method="post" action="/admin/pages/edit-page/<%= slug %>">
    <div class="form-group">
        <label for="">Nom</label>
        <input class="form-control" type="text"  name="title" value="<%=title%>" placeholder="Title">
    </div>
    
    <div class="form-group">
        <label for="">Slug</label>
        <input class="form-control" type="text"  name="slug" value="<%=slug%>" placeholder="Slug">
        </div>
        
       <div class="form-group">
        <label for="">Contenu</label>
        <textarea  class="form-control" id="ta" name="content" cols="30" rows="10" placeholder="Content"><%=content%></textarea>
    </div>
    
    <input type="hidden" name="id" value="<%= id %>">
    <button class="btn btn-default">Enregistrer les modifications</button>
    <a href="/admin/pages" class="btn btn-primary"> Retour</a>

</form>
<%-include ('../_layouts/footeradmin');-%>