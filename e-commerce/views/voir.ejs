<%- include ('_layouts/header_1');-%>

<% if (typeof panier !== "undefined") { %>
<h1 class="page-title">Mon panier</h1>
<br><br>
<table class="table table-striped alignmiddle">
    
    <tr>
        <th>Image</th>
        <th>Nom</th>
        <th>Prix</th>
        <th>Quantité</th>
        <th></th>
        <th>Totale</th>
    </tr>
    
    <% var total = 0; %>
    <% panier.forEach(function(product){ %>
    <% var sub = parseFloat(product.qty * product.price).toFixed(2) %>
    <% total += +sub %>
    <tr>
        <td><img class="cpi" src="<%= product.image %>" alt=""></td>
        <td><%= product.title %></td>
        <td>$<%= product.price %></td>
        <td><%= product.qty %></td>
        <td>
            <a href="/panier/maj/<%= product.title %>?action=add">+</a>&nbsp;
            <a href="/panier/maj/<%= product.title %>?action=remove">-</a>&nbsp;
            <a href="/panier/maj/<%= product.title %>?action=clear">Effacer</a>&nbsp;
        </td>
        <td>$<%= sub %></td>
    </tr>
    <% }); %>
    <tr>
        <td colspan="6" align="right"><b>Total: </b> <%= parseFloat(total).toFixed(2) %> €</td>
    </tr>
    <tr>
        <td colspan="5" align="right">
            <a class="clearcart btn btn-danger" href="#">Payement</a>
        </td>
        
    </tr>
    
</table>

<% } else {%>
<h3 class="text-center"> Panier Vide.</h3>
<% } %>




<%-include ('_layouts/footer')-%>